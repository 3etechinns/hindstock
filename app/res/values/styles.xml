<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="textStyle">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/text</item>
    </style>

    <style name="labelStyle">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/text</item>
