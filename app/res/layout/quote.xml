<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:padding="10dp" >

  <LinearLayout
    android:id="@+id/ll_quote"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/edit_text_bg"
    android:orientation="vertical"
    android:padding="5dp" >

    <LinearLayout
      android:id="@+id/ll_price_labels"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal" >

      <TextView
        style="@style/shadowTextView"
        android:layout_width="0dp"
        android:layout_weight="50"
        android:gravity="center"
        android:paddingRight="5dp"
        android:singleLine="true"
        android:text="@string/buy_price_label" />

      <TextView
        style="@style/shadowTextView"
        android:layout_width="0dp"
        android:layout_weight="50"
        android:gravity="center"
        android:paddingLeft="5dp"
        android:singleLine="true"
        android:text="@string/sell_price_label" />
    </LinearLayout>

    <LinearLayout
      android:id="@+id/ll_price_values"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal" >

      <TextView
        android:id="@+id/tv_buy_price"
        style="@style/shadowTextView"
        android:layout_width="0dp"
        android:layout_weight="50"
        android:gravity="center"
        android:paddingRight="5dp"
        android:singleLine="true"
        android:textStyle="bold" />

      <TextView
        android:id="@+id/tv_sell_price"
        style="@style/shadowTextView"
        android:layout_width="0dp"
        android:layout_weight="50"
        android:gravity="center"
        android:paddingLeft="5dp"
        android:singleLine="true"
        android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
      android:id="@+id/ll_net"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      android:paddingTop="10dp" >

      <TextView
        android:id="@+id/tv_net_label"
        style="@style/shadowTextView"
        android:layout_width="match_parent"
        android:gravity="center"
        android:textSize="20sp" />

      <TextView
        android:id="@+id/tv_net"
        style="@style/shadowTextView"
        android:layout_width="match_parent"
        android:gravity="center"
        android:textSize="20sp"
        android:textStyle="bold" />
    </LinearLayout>
  </LinearLayout>

</ScrollView>